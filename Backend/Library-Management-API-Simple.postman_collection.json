            "url": {
              "raw": "{{base_url}}/api/books?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "books"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get all books with pagination"
          },
          "response": []
